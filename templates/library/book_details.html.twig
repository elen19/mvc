{% extends 'base.html.twig' %}

{% block title %}Book Details{% endblock %}

{% block body %}
    <main>
        <h1>Book Details</h1>
        <dl>
            <dt>Title:</dt>
            <dd>{{ book.title }}</dd>
            
            <dt>ISBN:</dt>
            <dd>{{ book.ISBN }}</dd>
            
            <dt>Author:</dt>
            <dd>{{ book.author }}</dd>
            
            {% if book.picture %}
                <dt>Picture:</dt>
                <dd><img class="bookpic" src="{{ asset('img/' ~ book.picture) }}" alt="Book Picture"></dd>
            {% endif %}
        </dl>
        <a href="{{ path('update_book', {'id': book.id}) }}">Edit</a>
        <form action="{{ path('delete_book', {'id': book.id}) }}" method="post" onsubmit="return confirm('Are you sure you want to delete this book?');">
            <input type="hidden" name="_method" value="POST">
            <button type="submit">Delete</button>
        </form>
    </main>
{% endblock %}
